{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%\\Logs\\db-client-demo-server-.log",
          "formatter": "DB.Client.Backend.Host.Core.Logging.CustomCompactJsonFormatter, DB.Client.Backend.Host.Core",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ServerSettings": {
    "ListenAddress": "127.0.0.1",
    "ListenPort": 5055,
    "CertPath": "Cert\\server.pfx",
    "CertPassword": "123456"
  },
  "Modules": {
    "Grpc": {
      "AssemblyName": "DB.Client.Backend.Grpc.dll",
      "Enabled": true
    },
    "DB": {
      "AssemblyName": "DB.Client.Backend.DBInteraction.dll",
      "Enabled": true
    }
  }
}